{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "github-copilot": {
      "models": {
        "claude-haiku-4.5": {
          "options": {
            "textVerbosity": "low"
          }
        },
        "gpt-5-mini": {
          "options": {
            "reasoningEffort": "medium",
            "textVerbosity": "low"
          }
        }
      }
    }
  },
  "mcp": {
    "microsoft/playwright-mcp": {
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true,
      "type": "local"
    },
    "pencil": {
      "command": [
        "/Users/jerolan/.vscode/extensions/highagency.pencildev-0.6.26/out/mcp-server-darwin-arm64",
        "--app",
        "visual_studio_code"
      ],
      "enabled": true,
      "type": "local"
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    }
  }
}
